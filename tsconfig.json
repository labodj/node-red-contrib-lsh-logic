{
  "compilerOptions": {
    // --- Target & Module System ---
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // --- Output Structure ---
    "outDir": "./dist",
    "rootDir": "./src",

    // --- Type Generation ---
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,

    // --- JavaScript Interoperability ---
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // --- Strictness & Best Practices ---
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "isolatedModules": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "dist"]
}
